{{> beverage-info beverage}}

{{#if loggedIn}}
<p>Leave a review or TAPP THAT favorite button if you love this beverage!</p>
<form class="review-form">
   <div>
      <textarea name="review-body"></textarea>
   </div>
   <div>
      <button type="submit" class="bg-tahiti text-white font-bold py-2 px-4 rounded-full">SUBMIT REVIEW</button>
      <button type="button" class="favorite-btn bg-tahiti text-white font-bold py-2 px-4 rounded-full">FAVORITE</button>
   </div>
</form>
{{else}}
<p><a href="/login">Log In or Sign Up</a> to leave a review or TAPP this beverage.</p>
{{/if}}

<div>
   <h1>What TAPP THAT users think:</h1>
   {{> reviews beverage.reviews}}
</div>



{{#if loggedIn}}
<script src="/javascript/review.js"></script>
<script src="/javascript/favorite.js"></script>
{{/if}}