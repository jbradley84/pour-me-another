<div class="columns-3">
   <div class="p-10">
      <div class="beverage max-w-sm rounded overflow-hidden shadow-lg">
         <div>
         {{> beverage-info beverage}}
         </div>
      </div>
   </div>

   {{#if loggedIn}}
   <div class="p-10">

      <div class="beverage max-w-sm rounded overflow-hidden shadow-lg"> <p class="font-bold text-xl text-dark-grey mb-2">Leave a review or TAPP THAT
         favorite button if you love this beverage!</p>
         <form class="review-form">
            <div>
               <textarea class="block w-full px-4 py-w mt-2 text-salmon border-tan rounded-md"
                  name="review-body"></textarea>
            </div>

            <div>
               <button type="submit"
                  class="text-dark-grey border border-light-grey hover:bg-dark-grey hover:text-light-grey bg-tan font-bold uppercase px-4 py-1 rounded outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150">
                  add review</button>
               <button type="button"
                  class="favorite-btn text-dark-grey border border-light-grey hover:bg-dark-grey hover:text-light-grey bg-tan font-bold uppercase px-4 py-1 rounded outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150">
                  favorite</button>
            </div>
         </form>
      </div>
   </div>

   {{else}}
   <p><a class="text-sans" href="/login">Log In or Sign Up</a> to leave a review or TAPP this beverage.</p>
   {{/if}}

   <div class="p-10">
      <div class="beverage max-w-sm rounded overflow-hidden shadow-lg">
         <h1 class="font-bold text-xl text-dark-grey mb-2 ">What TAPP THAT users think:</h1>
         <div class="text-sans text-blue">
         {{> reviews beverage.reviews}}
         </div>
      </div>
   </div>
</div>



{{#if loggedIn}}
<script src="/javascript/review.js"></script>
<script src="/javascript/favorite.js"></script>
{{/if}}